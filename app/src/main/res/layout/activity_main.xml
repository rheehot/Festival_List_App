<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9E8742"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:background="@drawable/brownround"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_weight="0.15"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </TextView>

                <ImageView
                    android:layout_marginHorizontal="30dp"
                    android:layout_margin="30dp"
                    android:background="@drawable/leaf"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                </ImageView>

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </TextView>

            </LinearLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_weight="0.65"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.15">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.5">

                            <Spinner
                                android:layout_marginVertical="20dp"
                                android:id="@+id/spinner_rg"
                                android:layout_width="140dp"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/spinner_bnt"
                                android:spinnerMode="dialog"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp" >
                            </Spinner>



                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.7">

                            <Button
                                android:layout_alignParentLeft="true"
                                android:layout_centerInParent="true"
                                android:id="@+id/complete"
                                android:layout_width="60dp"
                                android:layout_height="40dp"
                                android:layout_centerHorizontal="true"
                                android:background="@drawable/myout"
                                android:text="찾기"
                                android:padding="10dp"
                                android:textSize="15sp" />


                        </RelativeLayout>

                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.1">

                    <LinearLayout
                        android:id="@+id/back_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/name_layout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3">

                            <TextView
                                android:fontFamily="@font/bazzi"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:text="@string/name"/>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3">

                            <TextView
                                android:fontFamily="@font/bazzi"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:text="@string/location"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4">

                            <TextView
                                android:fontFamily="@font/bazzi"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:text="@string/time"/>

                        </RelativeLayout>



                    </LinearLayout>



                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.75">



                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_v"
                        android:layout_width="match_parent"
                        android:layout_margin="20dp"
                        android:fontFamily="@font/bazzi"
                        android:layout_height="match_parent">


                    </androidx.recyclerview.widget.RecyclerView>



                </RelativeLayout>


            </LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_weight="0.1"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/go_review"
                    android:background="@mipmap/red_foreground"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </Button>

                <TextView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </TextView>

                <Button
                    android:id="@+id/go_mypage"
                    android:background="@mipmap/mountain_foreground"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </Button>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>